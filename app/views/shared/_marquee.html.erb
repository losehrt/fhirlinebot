<!-- Announcement Marquee -->
<div class="bg-orange-50 border-y border-orange-200 overflow-hidden">
   <div class="mx-auto max-w-6xl overflow-hidden">
    <div data-controller="marquee"
        data-marquee-speed-value="<%= local_assigns[:speed] || 20 %>"
        data-marquee-hover-speed-value="0"
        data-marquee-direction-value="left"
        data-action="mouseenter->marquee#pauseAnimation mouseleave->marquee#resumeAnimation"
        class="h-12 flex items-center">
      <div data-marquee-target="track" class="relative flex w-full">
        <div data-marquee-target="list" class="flex w-full shrink-0 flex-nowrap items-center gap-8 px-4">
          <% announcements.each_with_index do |announcement, index| %>
            <% if index > 0 %>
              <span class="text-orange-300">|</span>
            <% end %>
            <span class="text-gray-700 text-sm whitespace-nowrap"><%= announcement[:text] %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

