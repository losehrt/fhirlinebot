<!-- Flash Messages -->
<% if flash[:notice] %>
  <div class="flexy-alert alert-success" data-controller="alert" data-alert-auto-dismiss-value="5000">
    <div class="alert-content">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="alert-icon">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
      <p class="text-sm"><%= flash[:notice] %></p>
    </div>
    <button data-action="click->alert#dismiss" class="alert-close">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="flexy-alert alert-error" data-controller="alert" data-alert-auto-dismiss-value="5000">
    <div class="alert-content">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="alert-icon">
        <path d="M12 2L1 21h22L12 2zm0 3.83L19.53 19H4.47L12 5.83zM11 16v2h2v-2h-2zm0-6v4h2v-4h-2z"/>
      </svg>
      <p class="text-sm"><%= flash[:alert] %></p>
    </div>
    <button data-action="click->alert#dismiss" class="alert-close">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>
  </div>
<% end %>