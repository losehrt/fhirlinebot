<!-- 火線超人 FHIRLineBot 首頁 -->
<div>
  <% if !logged_in? %>
    <!-- 公告跑馬燈 -->
    <div class="w-full bg-white border-b border-gray-200">
      <%= render 'shared/marquee', announcements: [
        { text: '火線超人 - 一個加到 LINE 裡就能用的就醫小幫手' },
        { text: '實時查詢看診進度，減少就醫焦慮' },
        { text: '家屬陪護功能，即時掌握親人就醫進度' },
        { text: '符合 FHIR R4 國際標準' },
        { text: '安全的醫療資訊服務' }
      ], speed: 20, pause_on_hover: true %>
    </div>

    <!-- 英雄區域 -->
    <section class="relative bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- 左側內容 -->
          <div class="space-y-8">
            <div class="inline-flex items-center px-4 py-2 bg-blue-100 rounded-full">
              <span class="w-2 h-2 bg-blue-600 rounded-full animate-pulse mr-2"></span>
              <span class="text-sm font-medium text-blue-700">一個加到 LINE 裡就能用的就醫小幫手</span>
            </div>

            <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
              火線超人
              <span class="block text-blue-600 mt-2">
                FHIRLineBot
              </span>
            </h1>

            <p class="text-xl text-gray-600 leading-relaxed">
              看診到底排到第幾號了？家人現在看完沒？
            </p>

            <p class="text-lg text-gray-700 leading-relaxed">
              火線超人整合 Smart on FHIR 標準與 LINE 即時通訊，
              幫患者和家屬減少排隊焦慮、改進就醫體驗，
              讓醫院服務真正走進民眾日常生活。
            </p>

            <div class="flex flex-col sm:flex-row gap-4 pt-4">
              <div id="line-login-hero" class="inline-block"></div>
              <a href="#features" class="inline-flex items-center justify-center px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors">
                了解更多
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
            </div>
          </div>

          <!-- 右側視覺效果 -->
          <div class="relative">
            <div class="relative bg-white border-2 border-gray-300 rounded-2xl p-8">
              <div class="space-y-6">
                <!-- 模擬聊天介面 -->
                <div class="flex items-center space-x-3 pb-4 border-b border-gray-200">
                  <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-sm">
                    火
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">火線超人</p>
                    <p class="text-xs text-green-600">線上</p>
                  </div>
                </div>

                <!-- 模擬訊息 -->
                <div class="space-y-4">
                  <div class="flex justify-start">
                    <div class="max-w-[80%] bg-gray-100 rounded-2xl rounded-tl-none p-3">
                      <p class="text-sm text-gray-700">您好！我是火線超人</p>
                      <p class="text-sm text-gray-700 mt-1">幫您查詢看診進度</p>
                    </div>
                  </div>
                  <div class="flex justify-end">
                    <div class="max-w-[80%] bg-blue-600 text-white rounded-2xl rounded-tr-none p-3">
                      <p class="text-sm">我現在排到第幾號？</p>
                    </div>
                  </div>
                  <div class="flex justify-start">
                    <div class="max-w-[80%] bg-gray-100 rounded-2xl rounded-tl-none p-3">
                      <p class="text-sm text-gray-700">您目前在隊伍中的第 3 位</p>
                      <p class="text-sm text-gray-700 mt-1">預估等待時間：15 分鐘</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 核心功能區域 -->
    <section id="features" class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">核心功能</h2>
          <p class="text-xl text-gray-600">為患者和家屬設計的實用功能</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- 功能 1 -->
          <div class="bg-white rounded-xl border border-gray-200 p-8 hover:shadow-md transition-shadow">
            <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3">實時看診進度</h3>
            <p class="text-gray-600">一鍵查看您在看診隊伍中的位置和預估等待時間</p>
          </div>

          <!-- 功能 2 -->
          <div class="bg-white rounded-xl border border-gray-200 p-8 hover:shadow-md transition-shadow">
            <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3">家屬陪護</h3>
            <p class="text-gray-600">家屬可即時掌握親人的就醫進度，提供更好的照護支持</p>
          </div>

          <!-- 功能 3 -->
          <div class="bg-white rounded-xl border border-gray-200 p-8 hover:shadow-md transition-shadow">
            <div class="w-14 h-14 bg-orange-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3">智能提醒</h3>
            <p class="text-gray-600">回診提醒、用藥提醒、檢驗提醒，讓您不錯過重要的醫療事項</p>
          </div>

          <!-- 功能 4 -->
          <div class="bg-white rounded-xl border border-gray-200 p-8 hover:shadow-md transition-shadow">
            <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3">隱私安全</h3>
            <p class="text-gray-600">端對端加密和 OAuth 2.0 認證，保護您的醫療隱私</p>
          </div>
        </div>
      </div>
    </section>

    <!-- 使用流程區域 -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">使用流程</h2>
          <p class="text-xl text-gray-600">簡單三步驟，開始使用火線超人</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- 步驟 1 -->
          <div class="text-center">
            <div class="relative inline-block mb-8">
              <div class="w-24 h-24 bg-blue-600 rounded-full flex items-center justify-center text-white text-3xl font-bold">
                1
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">LINE 登入</h3>
            <p class="text-gray-600 text-center">使用您的 LINE 帳號安全登入平台，無需下載額外 App</p>
          </div>

          <!-- 步驟 2 -->
          <div class="text-center">
            <div class="relative inline-block mb-8">
              <div class="w-24 h-24 bg-green-600 rounded-full flex items-center justify-center text-white text-3xl font-bold">
                2
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">綁定醫院資料</h3>
            <p class="text-gray-600 text-center">連結您就診的醫療機構，授權查詢看診資訊</p>
          </div>

          <!-- 步驟 3 -->
          <div class="text-center">
            <div class="relative inline-block mb-8">
              <div class="w-24 h-24 bg-orange-600 rounded-full flex items-center justify-center text-white text-3xl font-bold">
                3
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">開始使用</h3>
            <p class="text-gray-600 text-center">查詢看診進度、接收提醒、分享給家屬</p>
          </div>
        </div>
      </div>
    </section>

    <!-- 行動呼籲區域 -->
    <section class="py-24 bg-blue-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold mb-6">準備好開始了嗎？</h2>
        <p class="text-xl text-blue-100 mb-10">
          立即使用 LINE 登入，體驗「有準備地就醫」
        </p>
        <div id="line-login-cta" class="inline-block"></div>
      </div>
    </section>

    <!-- 初始化 LINE 登入按鈕 -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // 建立 LINE 登入按鈕的函式
        function createLineLoginButton(containerId, buttonClass = '') {
          const container = document.getElementById(containerId);
          if (container) {
            const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
            fetch('<%= auth_request_login_path(format: :json) %>', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': csrfToken
              },
              credentials: 'same-origin'
            })
            .then(response => {
              if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
              }
              return response.json();
            })
            .then(data => {
              const button = document.createElement('a');
              button.href = data.authorization_url;
              button.className = buttonClass || 'inline-flex items-center space-x-2 px-6 py-3 bg-[#00b900] hover:bg-[#009900] text-white font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105';
              button.innerHTML = `
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3M19 19H5V5H19V19M17 8.5C17 8.22 16.78 8 16.5 8H14.3C13.9 8 13.5 8.2 13.3 8.5L12 10.9L10.7 8.5C10.5 8.2 10.1 8 9.7 8H7.5C7.22 8 7 8.22 7 8.5V15.5C7 15.78 7.22 16 7.5 16H8.5C8.78 16 9 15.78 9 15.5V11.58L10.3 13.87C10.5 14.19 10.9 14.4 11.3 14.4H12.7C13.1 14.4 13.5 14.19 13.7 13.87L15 11.58V15.5C15 15.78 15.22 16 15.5 16H16.5C16.78 16 17 15.78 17 15.5V8.5Z"/>
                </svg>
                <span>使用 LINE 登入</span>
              `;
              container.appendChild(button);
            })
            .catch(error => {
              console.error('Failed to load LINE login:', error);
            });
          }
        }

        // 建立按鈕
        createLineLoginButton('line-login-hero');
        createLineLoginButton('line-login-cta', 'inline-flex items-center space-x-2 px-8 py-4 bg-white text-blue-600 font-bold text-lg rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105');
      });
    </script>

  <% else %>
    <!-- 已登入用戶的儀表板 -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- 歡迎標題 -->
      <div class="bg-blue-600 rounded-2xl p-8 mb-8 text-white">
        <h1 class="text-3xl font-bold mb-2">
          歡迎回來，<%= current_user.display_name %>！
        </h1>
        <p class="text-blue-100">
          火線超人 - 您的就醫小幫手
        </p>
      </div>

      <!-- 快速統計 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- LINE 連線狀態 -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <% if current_user.has_line_account? %>
              <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">已連結</span>
            <% else %>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm font-medium rounded-full">未連結</span>
            <% end %>
          </div>
          <h3 class="text-gray-600 text-sm mb-1">LINE 帳號</h3>
          <p class="text-2xl font-bold text-gray-900">
            <%= current_user.has_line_account? ? current_user.line_account.display_name : "尚未連結" %>
          </p>
        </div>

        <!-- 用戶資料 -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <span class="text-sm text-gray-500">ID: <%= current_user.id.to_s.first(8) %>...</span>
          </div>
          <h3 class="text-gray-600 text-sm mb-1">使用者名稱</h3>
          <p class="text-2xl font-bold text-gray-900">
            <%= current_user.name %>
          </p>
        </div>

        <!-- 加入日期 -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <span class="text-sm text-gray-500"><%= (Date.current - current_user.created_at.to_date).to_i %> 天</span>
          </div>
          <h3 class="text-gray-600 text-sm mb-1">加入日期</h3>
          <p class="text-2xl font-bold text-gray-900">
            <%= current_user.created_at.strftime("%Y/%m/%d") %>
          </p>
        </div>
      </div>

      <!-- LINE 帳號詳細資訊 -->
      <% if current_user.has_line_account? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">LINE 帳號資訊</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- 個人資料 -->
            <div class="flex items-start space-x-4">
              <% if current_user.line_account.picture_url %>
                <img
                  src="<%= current_user.line_account.picture_url %>"
                  alt="<%= current_user.line_account.display_name %>"
                  class="w-20 h-20 rounded-xl border-4 border-blue-100"
                >
              <% else %>
                <div class="w-20 h-20 rounded-xl bg-blue-600 flex items-center justify-center text-white text-2xl font-bold">
                  <%= current_user.name.chars.first.upcase %>
                </div>
              <% end %>

              <div class="flex-1">
                <h3 class="font-bold text-gray-900 text-lg mb-1">
                  <%= current_user.line_account.display_name %>
                </h3>
                <p class="text-sm text-gray-500 font-mono mb-3">
                  ID: <%= current_user.line_account.line_user_id %>
                </p>
                <p class="text-sm text-gray-600">
                  上次同步：<%= current_user.line_account.updated_at.strftime("%Y/%m/%d %H:%M") %>
                </p>
              </div>
            </div>

            <!-- Token 狀態 -->
            <div class="space-y-4">
              <div class="p-4 bg-gray-50 rounded-lg">
                <h4 class="text-sm font-medium text-gray-700 mb-2">認證狀態</h4>
                <% if current_user.line_account.access_token_expired? %>
                  <div class="flex items-center text-red-600">
                    <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <span class="font-medium">Token 已過期，需要重新登入</span>
                  </div>
                <% else %>
                  <div class="flex items-center text-green-600">
                    <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="font-medium">有效（還有 <%= ((current_user.line_account.expires_at - Time.current).to_i / 86400) %> 天）</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <!-- 未連結 LINE 帳號 -->
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-8 mb-8 text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">尚未連結 LINE 帳號</h3>
          <p class="text-gray-600 mb-4">連結您的 LINE 帳號以使用完整功能</p>
          <div id="line-connect-dashboard" class="inline-block"></div>
        </div>
      <% end %>

      <!-- 快速操作 -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <%= link_to profile_path, class: "group bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-blue-300 transition-all duration-200" do %>
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900">個人資料</h3>
              <p class="text-sm text-gray-600">查看與編輯您的個人資訊</p>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        <% end %>

        <%= link_to setup_path, class: "group bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-green-300 transition-all duration-200" do %>
          <div class="flex items-center space-x-4">
