<div class="min-h-[calc(100vh-10rem)]">
  <% if logged_in? %>
    <!-- Logged-in Dashboard -->
    <div class="max-w-7xl mx-auto">
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          Welcome, <%= current_user.display_name %>!
        </h2>
        <p class="text-gray-600">
          FHIR LINE Bot - Healthcare Communication Platform
        </p>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm mb-1">LINE Account</p>
              <p class="text-2xl font-bold text-gray-900">
                <% if current_user.has_line_account? %>
                  ‚úì Connected
                <% else %>
                  Not Connected
                <% end %>
              </p>
            </div>
            <div class="text-4xl">
              <% if current_user.has_line_account? %>
                üü¢
              <% else %>
                ‚ö™
              <% end %>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm mb-1">User ID</p>
              <p class="text-lg font-mono text-gray-900 truncate">
                <%= current_user.id %>
              </p>
            </div>
            <div class="text-4xl">üë§</div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm mb-1">Join Date</p>
              <p class="text-lg font-bold text-gray-900">
                <%= current_user.created_at.strftime("%Y-%m-%d") %>
              </p>
            </div>
            <div class="text-4xl">üìÖ</div>
          </div>
        </div>
      </div>

      <!-- LINE Account Details -->
      <% if current_user.has_line_account? %>
        <div class="bg-white rounded-lg shadow p-6 mb-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">LINE Account Information</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Profile Section -->
            <div class="flex items-center space-x-4">
              <% if current_user.line_account.picture_url %>
                <img
                  src="<%= current_user.line_account.picture_url %>"
                  alt="<%= current_user.line_account.display_name %>"
                  class="w-16 h-16 rounded-full border-4 border-green-300"
                >
              <% else %>
                <div class="w-16 h-16 rounded-full bg-green-100 flex items-center justify-center text-green-700 text-2xl font-bold border-4 border-green-300">
                  <%= current_user.name.chars.first.upcase %>
                </div>
              <% end %>

              <div>
                <p class="text-sm text-gray-600">LINE Name</p>
                <p class="text-xl font-bold text-gray-900">
                  <%= current_user.line_account.display_name %>
                </p>
                <p class="text-xs text-gray-500 font-mono mt-1">
                  <%= current_user.line_account.line_user_id %>
                </p>
              </div>
            </div>

            <!-- Status Section -->
            <div class="space-y-3">
              <div>
                <p class="text-sm text-gray-600 mb-1">Token Expiration</p>
                <% if current_user.line_account.access_token_expired? %>
                  <p class="text-sm font-bold text-red-600">‚ö† Expired (Re-login required)</p>
                <% else %>
                  <p class="text-sm text-green-600">
                    ‚úì Valid (<%= ((current_user.line_account.expires_at - Time.current).to_i / 86400) %> days remaining)
                  </p>
                <% end %>
              </div>

              <div>
                <p class="text-sm text-gray-600 mb-1">Last Synced</p>
                <p class="text-sm text-gray-900">
                  <%= current_user.line_account.updated_at.strftime("%Y-%m-%d %H:%M") %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Action Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <%= link_to profile_path, class: "bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white hover:shadow-xl transition-shadow" do %>
          <div class="flex items-center space-x-4">
            <div class="text-4xl">üë§</div>
            <div>
              <h3 class="text-lg font-bold">Profile</h3>
              <p class="text-green-100 text-sm">View and edit your profile information</p>
            </div>
          </div>
        <% end %>

        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 text-white">
          <div class="flex items-center space-x-4">
            <div class="text-4xl">üìû</div>
            <div>
              <h3 class="text-lg font-bold">Communications</h3>
              <p class="text-blue-100 text-sm">Receive messages through LINE</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Non-logged-in Welcome Page -->
    <div class="min-h-[calc(100vh-10rem)] flex items-center justify-center">
      <div class="text-center max-w-2xl mx-auto px-4">
        <div class="text-6xl mb-6">üíö</div>

        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Welcome to FHIR LINE Bot
        </h1>

        <p class="text-xl text-gray-600 mb-8">
          A secure and convenient communication platform<br class="hidden sm:block">
          connecting healthcare institutions and patients
        </p>

        <!-- Features -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <div class="text-3xl mb-3">üîí</div>
            <h3 class="font-bold text-gray-900 mb-2">Secure</h3>
            <p class="text-sm text-gray-600">
              Safe and secure transmission of healthcare data
            </p>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <div class="text-3xl mb-3">üì±</div>
            <h3 class="font-bold text-gray-900 mb-2">LINE Integration</h3>
            <p class="text-sm text-gray-600">
              Easy login with your LINE account
            </p>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <div class="text-3xl mb-3">‚öïÔ∏è</div>
            <h3 class="font-bold text-gray-900 mb-2">FHIR Compliant</h3>
            <p class="text-sm text-gray-600">
              Complies with international healthcare data standards
            </p>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-lg p-8 border border-green-200">
          <p class="text-gray-700 mb-6">
            Login with your LINE account to get started with<br>
            secure healthcare communications
          </p>

          <div id="line-login-cta" class="inline-block"></div>
        </div>

        <!-- Footer Text -->
        <p class="text-gray-500 text-sm mt-12">
          Protected by secure LINE OAuth login
        </p>
      </div>
    </div>

    <!-- Initialize LINE Login Button for CTA -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const container = document.getElementById('line-login-cta');
        if (container) {
          const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
          fetch('<%= request_line_login_path(format: :json) %>', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': csrfToken
            },
            credentials: 'same-origin'
          })
            .then(response => {
              if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
              }
              return response.json();
            })
            .then(data => {
              const button = document.createElement('a');
              button.href = data.authorization_url;
              button.className = 'inline-flex items-center space-x-2 px-8 py-3 bg-[#00b900] hover:bg-[#009900] text-white font-bold text-lg rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl';
              button.innerHTML = `
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                </svg>
                <span>Login with LINE</span>
              `;
              container.appendChild(button);
            })
            .catch(error => {
              console.error('Failed to load LINE login:', error);
              const errorDiv = document.createElement('div');
              errorDiv.className = 'text-red-600 text-sm';
              errorDiv.textContent = 'Failed to load login button';
              container.appendChild(errorDiv);
            });
        }
      });
    </script>
  <% end %>
</div>
