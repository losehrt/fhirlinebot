<% content_for :title, "Dashboard - FHIR Healthcare Platform" %>

<div class="container mx-auto max-w-6xl">
  <!-- Welcome Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">
      Welcome, <%= current_user.display_name %>!
    </h1>
    <p class="text-gray-600 text-lg">
      Here's your healthcare dashboard overview
    </p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <!-- Total Users Stat -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Total Users</p>
          <p class="text-3xl font-bold text-gray-900"><%= @stats[:total_users] %></p>
        </div>
        <div class="bg-blue-100 rounded-lg p-3">
          <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM9 10a3 3 0 11-6 0 3 3 0 016 0zm6-3a3 3 0 11-6 0 3 3 0 016 0zm3.586 4.586a1 1 0 00-1.414-1.414L14 14.586l-2.586-2.586a1 1 0 00-1.414 1.414l4 4a1 1 0 001.414 0l4-4z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Active Sessions Stat -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Active Sessions</p>
          <p class="text-3xl font-bold text-gray-900"><%= @stats[:active_sessions] %></p>
        </div>
        <div class="bg-green-100 rounded-lg p-3">
          <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M7 9a2 2 0 11-4 0 2 2 0 014 0zm14 0a2 2 0 11-4 0 2 2 0 014 0zm-7-5a2 2 0 11-4 0 2 2 0 014 0zM9 15a4 4 0 11-8 0 4 4 0 018 0zm6-4a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Appointments Stat -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Appointments</p>
          <p class="text-3xl font-bold text-gray-900"><%= @stats[:appointments] %></p>
        </div>
        <div class="bg-purple-100 rounded-lg p-3">
          <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v2H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v2H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Messages Stat -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Messages</p>
          <p class="text-3xl font-bold text-gray-900"><%= @stats[:messages] %></p>
        </div>
        <div class="bg-orange-100 rounded-lg p-3">
          <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activities -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Activities</h2>

    <% if @recent_activities.any? %>
      <div class="space-y-4">
        <% @recent_activities.each do |activity| %>
          <div class="flex items-start gap-4 pb-4 border-b border-gray-200 last:border-b-0">
            <div class="bg-green-100 rounded-lg p-3 flex-shrink-0">
              <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-gray-900"><%= activity[:title] %></p>
              <p class="text-sm text-gray-600"><%= activity[:description] %></p>
            </div>
            <div class="flex-shrink-0 text-sm text-gray-500 whitespace-nowrap">
              <%= activity[:time] %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600">No recent activities</p>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="mt-8 flex gap-4">
    <%= link_to 'Account Settings', user_settings_path, class: 'inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200' %>
    <%= link_to 'Log Out', auth_logout_path, method: :post, class: 'inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200' %>
  </div>
</div>
