#!/usr/bin/env sh

if ! gem list foreman -i --silent; then
  echo "Installing foreman..."
  gem install foreman
fi

# Load environment variables from .env file if it exists
if [ -f .env ]; then
  set -a
  . ./.env
  set +a
  echo "✓ Loaded environment variables from .env"
else
  echo "⚠ Warning: .env file not found. Copy .env.example to .env and configure it."
fi

# Check if PORT is already specified, otherwise auto-detect
if [ -z "$PORT" ]; then
  # Try port 3000 first
  PORT=3000

  # Check if port 3000 is in use
  if lsof -Pi :3000 -sTCP:LISTEN -t >/dev/null 2>&1; then
    echo "⚠ Port 3000 is already in use. Trying port 3001..."
    PORT=3001

    # Check if port 3001 is also in use
    if lsof -Pi :3001 -sTCP:LISTEN -t >/dev/null 2>&1; then
      echo "⚠ Port 3001 is also in use. Trying port 3002..."
      PORT=3002
    fi
  fi
else
  PORT="$PORT"
fi

export PORT

echo "✓ Starting on port $PORT"

# Clean up any stale PID files
rm -f tmp/pids/server.pid 2>/dev/null || true

# Let the debug gem allow remote connections,
# but avoid loading until `debugger` is called
export RUBY_DEBUG_OPEN="true"
export RUBY_DEBUG_LAZY="true"

exec foreman start -f Procfile.dev "$@"
